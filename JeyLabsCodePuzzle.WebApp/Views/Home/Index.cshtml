@model ShapeGeneratorModel
@{
	ViewData["Title"] = "Shape Generator";
}

<h2 class="text-center">Welcome to Shape Generator</h2>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="well">
			<form method="post">

				<div class="form-group">
					<label asp-for="Command">Please, enter your command here:</label>
					<textarea rows="4" asp-for="Command" class="form-control"></textarea>
					<span asp-validation-for="Command" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-lg"> Draw</button>
					@*<div class="text-success">@ViewBag.UserMessage</div>*@
				</div>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			</form>
		</div>
	</div>
</div>

@if (Model.Shape != null)
{
	<h3 class="text-center">Your shape:</h3>
	if (Model.Shape is Square square)
	{
		await Html.RenderPartialAsync("_SquareSvg", square);
	}
	else if (Model.Shape is Circle circle)
	{
		await Html.RenderPartialAsync("_CircleSvg", circle);
	}
	else if (Model.Shape is Rectangle rectangle)
	{
		await Html.RenderPartialAsync("_RectangleSvg", rectangle);
	}
	else if (Model.Shape is Oval oval)
	{
		await Html.RenderPartialAsync("_OvalSvg", oval);
	}
	else if (Model.Shape is Polygon polygon)
	{
		await Html.RenderPartialAsync("_PolygonSvg", polygon);
	}
}

